{
  "type": "CORE:Blueprint",
  "description": "Blueprint for a ui widget",
  "name": "UiWidget",
  "attributes": [
    {
      "name": "name",
      "optional": false,
      "attributeType": "string",
      "type": "CORE:BlueprintAttribute",
      "description": "Name of the widget."
    },
    {
      "name": "type",
      "attributeType": "string",
      "type": "CORE:BlueprintAttribute",
      "default": "CORE:UiWidget"
    },
    {
      "name": "optional",
      "attributeType": "boolean",
      "type": "CORE:BlueprintAttribute",
      "default": false,
      "description": "Used to control what plugin in chosen."
    },
    {
      "attributeType": "CORE:UiAttribute",
      "type": "CORE:BlueprintAttribute",
      "name": "options",
      "dimensions": "*",
      "description": "List of options for this widget. may be anything, title, another widget or styling."
    }
  ]
}
